<% layout('./layouts/boilerplate.ejs') %>

<section class="content-main">
    <h1>Sign Up</h1><br>
    <form action="/signup" method="POST">
      <div class="form-group">
        <label>First Name</label>
        <input type="text" class="form-control home-input" name="fname" required autofocus>
      </div>
      <div class="form-group">
        <label>Last Name</label>
        <input type="text" class="form-control home-input" name="lname" required autofocus>
      </div>
      <div class="form-group">
        <label>Pen name</label>
        <input type="text" class="form-control home-input" name="blogername" required autofocus>
      </div>
      <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control home-input" name="password" required>
      </div>
      <button type="submit" class="btn btn-primary">Sign Up</button>
    </form>
</section>
  

