<% layout('./layouts/boilerplate.ejs') %>

<section class="content-main">
  <h1>Login</h1><br>
  <form action="/login" method="POST"  class="needs-validation" novalidate>
    <div class="form-group">
      <label>Pen name</label>
      <input type="text" class="form-control home-input" name="blogername" required autofocus>
      <div class="invalid-feedback">Please enter your Pen Name.</div>
    </div>
    <div class="form-group">
      <label>Password</label>
      <input type="password" class="form-control home-input" name="password" required>
      <div class="invalid-feedback">Please enter your password.</div>
    </div>
    <button type="submit" class="btn btn-primary">Log In</button>
  </form>
</section>