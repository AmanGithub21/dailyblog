<% layout('./layouts/boilerplate.ejs') %>

<section class="container-fluid content-main">

    <h1>Edit</h1><br>
  
    <form class="" action="/bloger/<%=blog.bloger.blogername%>/<%=blog.title%>?_method=PUT"  method="post">
      <div class="form-group">
        <label><h4>Title</h4></label><br>
        <input class="form-control" type="text" autofocus maxlength="108" style="width: 45%" name="blog[title]" value="<%= blog.title %>">
      </div>
      <div class="form-group">
        <label><h4>Content</h4></label><br>
        <textarea class="blog-input form-control" name="blog[content]" rows="6" style="width: 45%" ><%= blog.content %></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</section>