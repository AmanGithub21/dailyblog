<% layout('./layouts/boilerplate.ejs') %>

<h1>Edit</h1>

<form action="/global/<%=blog.title%>?_method=PUT" method="POST" class="form-group">
    <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input type="text" name="title" value="<%=blog.title%>" class="form-control" id="title" >
    </div>
    <div class="mb-3">
        <label class="form-label" for="content">Content</label>
        <textarea type="text" name="content" class="form-control" id="content" rows="5"><%=blog.content%></textarea>
    </div>
    <button class="btn btn-success" type="submit">Edit</button>
</form>